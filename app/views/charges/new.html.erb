<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <h4>Confirm upgrade to premium membership.</h4>
    <label class="amount">
      <span style="display: block; margin: 5px auto">
        Upgrade price: $<%= '%.2f' % (@stripe_btn_data[:amount]/100) %>
      </span>
    </label>
  </article>
  <script class='stripe-button' src="https://checkout.stripe.com/checkout.js"
    data-key="<%= @stripe_btn_data[:key] %>"
    data-amount="<%= @stripe_btn_data[:amount] %>"
    data-description="<%= @stripe_btn_data[:description] %>"
    data-label="confirm and process payment">
  </script>
<% end %>
<%= link_to "Back", :back, style: "display: block; margin-top: 20px" %>
 